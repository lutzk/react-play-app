{
  "rulesDirectory": ["tslint-plugin-prettier"],
  "extends": ["tslint-plugin-prettier", "tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "variable-name": false,
    "interface-name": false,
    "prettier": [true, {
      "singleQuote": true,
      "semi": true,
      "printWidth": 80,
      "trailingComma": "all"
    }],
    "object-literal-sort-keys": false,
    "no-console": false,
    "no-shadowed-variable": false
  },
  "jsRules": {
    "variable-name": false,
    "prettier": [true, {
      "singleQuote": true,
      "semi": true,
      "printWidth": 80,
      "trailingComma": "all"
    }],
    "object-literal-sort-keys": false,
    "no-console": false,
    "no-shadowed-variable": false
  },
  "linterOptions": {
    "exclude": [
      "couch-pwd-index.patch.js",
      "src/app/redux/sagas/sagaMonitor.js",
      "src/redux-pouchdb-plus/tests/**/*.*",
      "superlogin-lib-util-js.patch.js",
      "babel-plugin-universal-import.patch.js",
      "webpack/**/*.*",
      "node_modules/**/*.*",
      "bin/**/*.*",
      "static/**/*.*"
    ]
  }
}